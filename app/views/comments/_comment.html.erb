<% comment = local_assigns[:comment] || comment %>
<tr id="comment-<%= comment.id %>">
  <td>
    <h3 class="small"><%= comment.user.name.presence || "名無しユーザー" %></h3>
    <p><%= simple_format(comment.content) %></p>
  </td>

  <% if current_user.own?(comment) %>
    <td class="action text-end">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to edit_incense_review_comment_path(comment.incense_review, comment),
              class: "btn btn-sm btn-outline-primary" do %>
            <i class="bi bi-pencil-fill"></i> 編集
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= button_to incense_review_comment_path(comment.incense_review, comment),
              method: :delete,
              class: "btn btn-sm btn-outline-danger" do %>
            <i class="bi bi-trash-fill"></i> 削除
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>

