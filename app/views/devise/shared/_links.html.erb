<%- if controller_name != 'sessions' %>
  <%= link_to t("devise.shared.links.sign_in", default: "ログイン"),
              new_user_session_path %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("devise.shared.links.sign_up", default: "新規登録"),
              new_user_registration_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && action_name != 'new' %>
  <%= link_to t("devise.shared.links.forgot_your_password", default: "パスワードをお忘れですか？"),
              new_user_password_path %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise.shared.links.didnt_receive_confirmation_instructions", default: "確認メールを受け取っていませんか？"),
              new_user_confirmation_path %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("devise.shared.links.didnt_receive_unlock_instructions", default: "ロック解除メールを受け取っていませんか？"),
              new_user_unlock_path %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t("devise.shared.links.sign_in_with_provider",
                  default: "%{provider} でログイン",
                  provider: OmniAuth::Utils.camelize(provider)),
                omniauth_authorize_path(:user, provider) %><br />
  <% end -%>
<% end -%>
